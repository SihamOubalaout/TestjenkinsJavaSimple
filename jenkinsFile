pipeline {
    agent any
tools {
        jdk 'JDK17'  
    }
    environment {
        PATH = "C:\\WINDOWS\\SYSTEM32"
    }

    stages {
        stage('List files') {
            steps {
                bat 'dir'
            }
        }
        stage('Compile') {
            steps {
                bat 'javac -d out src/Main.java'
            }
        }
        stage('Test') {
            steps {
                bat 'java -classpath lib/*;out MainTest' // Note the use of ';' to separate paths in Windows
            }
        }
        stage('Run') {
            steps {
                bat 'java -cp out Main'
            }
        }
    }

    post {
        always {
            echo 'Pipeline completed.'
            archiveArtifacts artifacts: 'out/*.class', allowEmptyArchive: true
        }
        success {
            echo 'Build and tests were successful!'
        }
        failure {
            echo 'There was an error in the pipeline.'
        }
    }
}
